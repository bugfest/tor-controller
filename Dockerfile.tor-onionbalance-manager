# build
FROM --platform=$BUILDPLATFORM docker.io/library/golang:1.17-alpine as builder

WORKDIR /src

COPY . /src

# Build
ARG TARGETOS TARGETARCH
RUN --mount=type=cache,target=/root/.cache/go-build \
    --mount=type=cache,target=/go/pkg \
    CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH go build -a -o /out/onionbalance-local-manager ./agents/onionbalance/main.go

# package build
FROM docker.io/library/alpine:3.17

ARG OB_VERSION="0.2.2"

RUN apk add --update --no-cache \
    git python3 py3-pip py3-wheel py3-cryptography py3-setproctitle py3-pycryptodomex
RUN python3 -m pip --no-cache-dir install git+https://gitlab.torproject.org/tpo/core/onionbalance.git@${OB_VERSION}

WORKDIR /app
RUN chmod g+w .

COPY --from=builder /out/onionbalance-local-manager .

USER 1001

ENTRYPOINT ["./onionbalance-local-manager"]
